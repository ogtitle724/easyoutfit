{
  "manifest_version": 3,
  "name": "Outpicker",
  "version": "1.0",
  "description": "Outpicker is a Google Chrome extension designed to simplify your daily outfit selection process.",
  "permissions": ["tabs", "storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "capture-page": {
      "suggested_key": {
        "default": "Ctrl+Q"
      },
      "description": "Capture the visible page"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
